{
  "short_name": "Pomodoro",
  "name": "Pomodoro Timer",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "16": "pomodoro.png",
      "24": "pomodoro.png",
      "32": "pomodoro.png"
    },
    "default_popup": "index.html",
    "default_title": "Pomodoro"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "alarms"
  ],
  "version": "1.0"
}
